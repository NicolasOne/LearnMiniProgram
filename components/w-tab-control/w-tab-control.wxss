/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  margin-bottom: 10rpx;
  background: #fff;
  padding-bottom: 5rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}

.active {
  color: #ff5777;
}

.tab-item.active text {
  padding: 16rpx 10rpx;
  /* border-bottom: 4rpx solid #ff5777; */
}
.tab-item-line{
  width: 250rpx;
  position:relative;
  left: 60rpx;
  bottom: 1rpx;
  border-bottom: 4rpx solid #323233;
}