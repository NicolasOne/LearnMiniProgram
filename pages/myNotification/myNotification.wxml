<!--pages/myNotification/myNotification.wxml-->
<view class="myNotification_page">
    <view class="notification_item" wx:for="{{msg}}" wx:key="{{index}}">
        <view class="user_detail">
            <view class="user_img">
                <image src="{{item.userImg}}" style="width: 100%;height: 100%"/>
            </view>
            <view class="user_name">{{item.userName}}</view>
            <view class="user_active">{{active[item.type]}}</view>
            <view wx:if="{{item.type!=2&&item.type!=5}}" class="user_comment">
                {{item.type==1||item.type==4?item.comment:item.type==3?item.shopName:item.detail.shopName}}
            </view>
        </view>
        <view class="notification_content">
            <view wx:if="{{item.type==1||item.type==2||item.type==3}}" class="share_detail">
                <view class="share_img">
                    <image src="{{item.shareImg}}" style="width: 100%;height: 100%"/>
                </view>
                <view class="share_content">
                    {{item.shareContent}}
                </view>
            </view>
            <view wx:if="{{item.type==4||item.type==5}}" class="comment_detail">
                {{item.comment}}
            </view>
            <view wx:if="{{item.type==6}}" style="background-image: url({{item.detail.shopImg}})" class="card_detail">
                <view class="card_name">
                    {{item.detail.shopName}}
                </view>
                <view class="card_ctime">
                    {{item.detail.createTime}}
                    <text> 发布</text>
                </view>
                <view class="card_content">
                    <text>商家介绍： </text>
                    {{item.detail.shopContent}}
                </view>
            </view>
        </view>
        <view class="notification_time">{{item.createTime}}</view>
    </view>
</view>
