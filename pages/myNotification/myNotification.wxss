/* pages/myNotification/myNotification.wxss */
page {
    background: #f1f1f1;
}
.myNotification_page {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
}
.notification_item {
    width: 100%;
    background: #fff;
    border-radius: 15rpx;
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    color: #333;
    font-size: 26rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.user_detail {
    width: 100%;
    display: flex;
    align-items: center;
}
.user_img {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.user_img image {
    border-radius: 50%;
}
.user_comment {
    width: 20%;
    /* 超出行数显示。。。 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden;
  word-break: break-all;
  word-wrap: break-word;
}
.user_active {
    color: #ccc;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.notification_content {
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    position: relative;
}
.share_detail {
    display: flex;
    width: 100%;
    border: 2rpx solid #f1f1f1;
    padding: 10rpx;
    box-sizing: border-box;
}
.share_img {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}
.share_content {
    width: 100%;
    /* 超出行数显示。。。 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  word-break: break-all;
  word-wrap: break-word;
  height: 100rpx;
}
.card_detail {
    width: 100%;
    height: 300rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    background-size: 100% 100%;
    border:  2rpx solid #f1f1f1;
    border-radius: 10rpx;
    background-position: center center;
    padding-left: 20rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
    color: #fff;
    position: relative;
}
.cover {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}
.cover::before{
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 560rpx;
    height: 100%;
    border-top-left-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
    background: linear-gradient(to right,rgba(0,0,0,.6) 0,rgba(0,0,0,0) 100%);
}
.card_name {
    font-size: 36rpx;
    font-weight: 600;
    line-height: 1.22;
    text-shadow: 2rpx 2rpx rgba(0,0,0,.4);
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-bottom: 10rpx;
    position: relative;
    z-index: 10;
}
.card_ctime {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 18rpx;
    line-height: 1;
    font-weight: bold;
    text-shadow: 2rpx 4rpx 0px rgba(0,0,0,0.20);
    position: relative;
    z-index: 10;
}
.card_content {
    font-weight: normal;
    font-size: 16rpx;
    position: relative;
    z-index: 10;
}
.notification_time {
    font-size: 20rpx;
}
.delete_btn {
    width:100rpx;
    height:100rpx;
    background:linear-gradient(-55deg,rgba(223,50,27,1),rgba(205,40,18,1));
    box-shadow:0rpx 8rpx 14rpx 0rpx rgba(223,50,27,0.4);
    border-radius:50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    right: 50rpx;
    bottom: 100rpx;
}