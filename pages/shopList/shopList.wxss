/* pages/shopList/shopList.wxss */
page {
  background: #f1f1f1
}
.shop_list_page {
  width: 100%;
  height: 100%;
}
.title {
  background: rgb(248, 225, 229);
  width: 100%;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
}
.title_content {
  margin-left: 15rpx;
  color: rgb(252, 113, 139);
  font-size: 25rpx;
}
.shop_list {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.list_item {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  font-weight: 550;
}
.piont {
  width: 20rpx;
  height: 20rpx;
  background: #f1f1f1;
  border-radius: 50%;
  margin-right: 20rpx;
}
.pink_piont {
  width: 20rpx;
  height: 20rpx;
  background: rgb(252, 113, 139);
  border-radius: 50%;
  margin-right: 20rpx;
}
.next {
  font-size: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: rgb(252, 113, 139);
  letter-spacing: 0.5em;
}