/* pages/commentDetail/commentDetail.wxss */
.info-all {
    display: flex;
    align-items: center;
    padding: 15rpx 30rpx 15rpx 20rpx;
}
  .info-item {
    width: 100%;
    display: flex;
    margin-left: 20rpx;
    flex-direction: column;
    color: #575757;
    font-size: 24rpx;
  }
  .shareTime {
    width: 100%;
    font: KaiTi;
    font-size: 19rpx;
    margin-top: 10rpx;
  }
  .shareContent {
    padding: 20rpx 20rpx 0 20rpx;
    font-family: SimSuncss;
    font-size: 30rpx;
    letter-spacing:5rpx;
    color: #333;
    line-height: 1.2;
  }
  .icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
    border-radius: 50%;
  }
  .commentall {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 100rpx;
    box-sizing: border-box;
  }
  .news-content {
    padding-bottom: 20rpx;
    margin-bottom: 30rpx;
  }
  .comment-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    border-top: 3rpx solid #ccc;
    padding: 20rpx 50rpx 20rpx 50rpx;
    box-sizing: border-box;
  }
  .comment-item:last-child{
    border-bottom: 3rpx solid #ccc;
  }
  .commen-user-info {
    width: 100%;
    display: flex;
    align-items: center;
  }
  .user-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #575757;
    font-size: 20rpx;
    margin-left: 10rpx;
  }
  .createTime {
    width: 100%;
    font: KaiTi;
    font-size: 19rpx;
    margin-top: 10rpx;
  }
  .commentContent {
    padding: 20rpx 20rpx 20rpx 0rpx;
    box-sizing: border-box;
    font-family: SimSuncss;
    font-size: 25rpx;
    letter-spacing: 5rpx;
    color: #333;
    line-height: 1.2;
    margin-top: 10rpx;
  }
  .zan {
    display: flex;
    width: 95%;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
  }
  .zanpic {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
  }
  .back {
    font-size: 25rpx;
    color: #C9C9C9;
  }
  .zan-box {
    display: flex;
    align-items: center;
  }

/* 评论部分 */
.input_null{
    color: #C9C9C9;
}
.release{
    display: flex;
    align-items: center; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: #F7F8F7;
    font-size: 28rpx;
    z-index: 999;
}
.release .text{
    width: 604rpx;
    min-height: 34rpx;
    max-height: 102rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color:  #ffffff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
}
.release .submit{
    width: 116rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    font-size: 25rpx;
    color: rgb(204, 82, 0);
}