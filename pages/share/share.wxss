/* pages/share/share.wxss */
page {
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.share-page{
  display: flex;
  flex-direction: column;
  position: relative;
}
.content-text {
  width: 100%;
  height: 200rpx;
  line-height: 5rpx;
  background: #fff;
  margin-top: 80rpx;
}
.upload-img {
  width: 100%;
  min-height: 220rpx;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.img-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.img-item-del-btn {
  width: 30rpx !important;
  height: 30rpx !important;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.img-item:nth-child(3){
  
  margin-right: 0rpx;
}
.img-item:nth-child(6){
  
  margin-right: 0rpx;
}
.img-item:nth-child(9){
  
  margin-right: 0rpx;
}
.img-item image {
  width: 100%;
  height: 100%;
}
.add-img {
  width: 220rpx;
  height: 220rpx;
  border: 5rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.add-img image {
  width: 100rpx;
  height: 100rpx;
}
.count {
  color: #ccc;
  margin-top: 10rpx;
  font-size: 25rpx;
}
.share-btn {
  position: absolute;
  right: 0rpx;
  background: #fff;
  border: 2rpx solid #FE4F70;
  color: #FE4F70;
  font-size: 20rpx;
  font-weight: 500;
  padding: 10rpx 20rpx;
}
.tag-list{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 20rpx;
  align-items: center;
}
.tag-item {
  background: rgb(216, 237, 247);
  color: #2186E0;
  margin-right: 10rpx;
  font-size: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.tag-item-chooes {
  background:red;
  color: #2186E0;
  margin-right: 10rpx;
  font-size: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.tag-item image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: -5rpx
}
.show-map {
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #333;
  margin-top: 40rpx;
}
.show-map image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.zanpic {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;

}