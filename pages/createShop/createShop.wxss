/* pages/createShop/createShop.wxss */
.create_shop_page {
  width: 100%;
  min-height: 100%;
}
.title {
  background: rgb(248, 225, 229);
  width: 100%;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
}
.title_content {
  margin-left: 15rpx;
  color: rgb(252, 113, 139);
  font-size: 25rpx;
}
.create_content {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: flex-start;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.word {
  margin-bottom: 20rpx;
}
.content-text {
  width: 100%;
  height: 200rpx;
  line-height: 5rpx;
  background: #fff;
}
.upload-img {
  width: 100%;
  min-height: 220rpx;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.img-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.img-item:nth-child(3){
  
  margin-right: 0rpx;
}
.img-item:nth-child(6){
  
  margin-right: 0rpx;
}
.img-item:nth-child(9){
  
  margin-right: 0rpx;
}
.img-item image {
  width: 100%;
  height: 100%;
}
.add-img {
  width: 220rpx;
  height: 220rpx;
  border: 5rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.add-img image {
  width: 100rpx;
  height: 100rpx;
}
.count {
  color: #ccc;
  font-size: 25rpx;
}
.next {
  font-size: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 2rpx solid rgb(252, 113, 139);
  color: rgb(252, 113, 139);
  letter-spacing: 0.5em;
}