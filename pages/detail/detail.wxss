/* pages/detail/detail.wxss */
.block{
   /*下面三行代码实现了图片换行*/
 display: flex;
 flex-flow: row wrap;  
 align-content: space-around;
}
.image {
  width: 31%;
  margin-left: 15rpx;
}
.info-all {
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
}
.info-item {
  width: 100%;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  color: #575757;
  font-size: 24rpx;
}
.shareTime {
  width: 100%;
  font: KaiTi;
  font-size: 19rpx;
  margin-top: 10rpx;
}
.shareContent {
  padding: 20rpx 20rpx 0 20rpx;
  font-family: SimSuncss;
  font-size: 30rpx;
  letter-spacing:5rpx;
  color: #333;
  line-height: 1.2;
}
.shareId {
  margin-left: 15rpx;
}
.zanpic {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.back {
  font-size: 25rpx;
  color: #C9C9C9;
}
.zan-box {
  display: flex;
  align-items: center;
}
.icon {
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.star {
  font-size: 25rpx;
  margin-left: 200rpx;
  border-color:  brown;
  border-collapse: unset;
}
.topic_answerImg{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.topic_answerImg_only_one{
  width: 100%;
  display: flex;
  justify-content: center;
}
.topic_answer_itemImg{
  width: 32%;
  height: 230rpx; 
  margin-right: 12rpx;
  margin-top: 20rpx;
}
.topic_answer_itemImg_only_one {
  width: 95%;
  height: 400rpx;
  margin-top: 20rpx;
}
.topic_answer_itemImg:nth-child(3){
  margin-right: 0rpx;
}
.topic_answer_itemImg:nth-child(6){
  margin-right: 0rpx;
}
.topic_answer_itemImg:nth-of-type(3n){
  margin-right: 0;
}
.news-content {
  margin-bottom: 150rpx;
}
.commentall {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.comment-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 3rpx solid #ccc;
  padding: 30rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
}
.comment-item:last-child{
  border-bottom: 3rpx solid #ccc;
}
.commen-user-info {
  width: 100%;
  display: flex;
  align-items: center;
}
.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #575757;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.createTime {
  width: 100%;
  font: KaiTi;
  font-size: 19rpx;
  margin-top: 10rpx;
}
.commentContent {
  padding: 20rpx 20rpx 20rpx 0rpx;
  box-sizing: border-box;
  font-family: SimSuncss;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  color: #333;
  line-height: 1.2;
  margin-top: 10rpx;
}
.zan {
  display: flex;
  width: 95%;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.tag {
    padding: 10rpx 10rpx;
    border-radius: 10rpx;
    margin: 10rpx 10rpx 0 0;
    background: #EEF5F8;
    color: #2186E0;
    font-size: 20rpx;
    vertical-align: middle;
    text-align: center;
}
.tagall {
  padding: 15rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 20rpx;
}
/* 评论部分 */
.input_null{
    color: #C9C9C9;
}
.release{
    display: flex;
    align-items: center; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: #F7F8F7;
    font-size: 28rpx;
    z-index: 999;
}
.release .text{
    width: 604rpx;
    min-height: 34rpx;
    max-height: 102rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color:  #ffffff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
}
.release .submit{
    width: 116rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    font-size: 25rpx;
    color: rgb(204, 82, 0);
}