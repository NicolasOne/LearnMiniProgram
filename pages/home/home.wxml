<!--pages/home/home.wxml-->
<!-- 轮播图显示数据 -->
<w-swiper list="{{banner}}" />

<!-- 分享数据主体显示 -->
<w-shareList shareList="{{shareList}}" />

<w-tab-control titles="{{titles}}" bind:tabclick="handleTabClick" />

<!-- 5展示分享数据 -->
<scroll-view>
<view class="share">
  <block wx:for="{{share[currentType].list}}" wx:key="index">
    <w-share-item item="{{item}}" data-index="{{index}}" />
  </block>
</view>
</scroll-view>

<view class="page-add-data" wx:if="{{isBottom==true}}">
    <text class="bottomText">{{pageTottomText}}</text>
</view>

<!-- 底部悬浮按钮 -->

<cover-view class="buttom"> 
  <cover-image style="opacity:{{0.5}}" bindtap="bindShareComent" src="/assets/other/fx.png"/>
  <button>分享</button>
</cover-view>
